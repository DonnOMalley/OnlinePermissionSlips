@model OnlinePermissionSlips.Models.DAL.PermissionSlipPrint

@{
	ViewBag.Title = "Permission Slip Print";
}

<hr class="hidden-print" />
<div class="jumbotron hidden-print">
	<h1>@Html.DisplayFor(model => model.Name)</h1>
	<div>
		@Html.LabelFor(model => model.Location): @Html.DisplayFor(model => model.Location)
	</div>

	<div>
		<label>Date/Time</label>: @Html.DisplayFor(model => model.StartDateTime) - @Html.DisplayFor(model => model.EndDateTime)
	</div>

	<div>
		@Html.LabelFor(model => model.Cost): $@Html.DisplayFor(model => model.Cost)
	</div>
</div>
<div class="visible-print hidden">
	<h1>@Html.DisplayFor(model => model.Name)</h1>
	<div>
		@Html.LabelFor(model => model.Location): @Html.DisplayFor(model => model.Location)
	</div>

	<div>
		<label>Date/Time</label>: @Html.DisplayFor(model => model.StartDateTime) - @Html.DisplayFor(model => model.EndDateTime)
	</div>

	<div>
		@Html.LabelFor(model => model.Cost): $@Html.DisplayFor(model => model.Cost)
	</div>
</div>

<br class="hidden visible-print" />
<div class="form-horizontal">
	<div class="form-group">
		@Html.LabelFor(model => model.GuardianName, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.GuardianName, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.StudentFullName, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.StudentFullName, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
		</div>
	</div>

	@if (Model.RequireChaperone)
	{
		<div class="form-group">
			@Html.LabelFor(model => model.CanChaperone, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.CheckBoxFor(model => model.CanChaperone, new { @disabled = "disabled" })
					@if (Model.RequireChaperoneBackgroundCheck)
					{<i>Chaperone's Require a Background Check - Request form from teacher and/or school office</i>}
				</div>
			</div>
		</div>
	}

	<div class="form-group">
		@Html.LabelFor(model => model.DaytimePhone, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.DaytimePhone, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.EmergencyPhone, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.EmergencyPhone, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.SpecialHealthDietaryAccessConsiderations, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.SpecialHealthDietaryAccessConsiderations, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
			@Html.EditorFor(model => model.SpecialHealthDietaryAccessConsiderations, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
			@Html.EditorFor(model => model.SpecialHealthDietaryAccessConsiderations, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
			@Html.EditorFor(model => model.SpecialHealthDietaryAccessConsiderations, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
		</div>
	</div>

	<div class="form-group">
	<div class="col-md-2">&nbsp;</div>
	<div class="col-md-10">
		<i>I authorize my student to attend the field trip to @Model.Location on @Model.StartDateTime to @Model.EndDateTime</i>
	</div>
	
</div>

	<div class="form-group">
		@Html.LabelFor(model => model.SignatureData, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.SignatureData, new { htmlAttributes = new { @class = "form-control underlined", @readonly = "readonly" } })
		</div>
	</div>
</div>

<div>
	<a href="#" id="PrintBtn" class="btn btn-primary hidden-print" onclick="javacript: PrintPermissionSlip();">Print <span class="glyphicon glyphicon-print"></span></a>
	<a href="@Url.Action("Index","PermissionSlips")" id="PrintBtn" class="btn btn-danger hidden-print">Close</a>
</div>



@section Scripts {
	<script type="text/javascript">
		function PrintPermissionSlip() {
			window.print();
		}

		$(document).ready(function () {
			PrintPermissionSlip();
			window.close();
			//window.location = "/PermissionSlips";
		});
	</script>
}