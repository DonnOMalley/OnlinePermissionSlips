@model IEnumerable<OnlinePermissionSlips.Models.DAL.Template>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.School.SchoolName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ClassRoom.TeacherUserID)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CategoryID)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Location)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Cost)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.RequireChaperone)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.RequireChaperoneBackgroundCheck)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.School.SchoolName)
		</td>
		<td>
			@Html.Raw(item.ClassRoom.GetClassName())
		</td>
		<td>
			@Html.Raw(item.Category.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Location)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Cost)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.RequireChaperone)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.RequireChaperoneBackgroundCheck)
		</td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
			@Html.ActionLink("Details", "Details", new { id = item.ID }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.ID })
		</td>
	</tr>
}

</table>
