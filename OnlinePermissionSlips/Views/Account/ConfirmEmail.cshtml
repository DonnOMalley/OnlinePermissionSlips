@{
	ViewBag.Title = "Confirm Email";
}

<h2>@ViewBag.Title.</h2>
<div>
	<p>
		Thank you for confirming your email.
			@if (!User.Identity.IsAuthenticated) { <p>Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p> }
	</p>
</div>
